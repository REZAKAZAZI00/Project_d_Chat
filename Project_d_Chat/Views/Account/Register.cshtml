<div class="limiter">
    <div class="container-login100" style="background-image: url('./Login_v16/images/bg-01.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
            <span class="login100-form-title p-b-41">
                 ایجاد  حساب
            </span>
            <form action="Register" method="post" class="login100-form validate-form p-b-33 p-t-5">

                <div class="wrap-input100 validate-input" >
                    <input class="input100" type="text" asp-for="UserName"  placeholder="نام کاربری ">
                    <span class="focus-input100 text-danger text-center" asp-validation-for="UserName"></span>
                </div>

                <div class="wrap-input100 validate-input" >
                    <input class="input100" type="password" asp-for="Password" placeholder="کلمه عبور">
                    <span class="focus-input100 text-danger text-center" asp-validation-for="Password"></span>
                </div>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="password" asp-for="RePassword" placeholder=" تکرار کلمه عبور ">
                    <span class="focus-input100 text-danger text-center" asp-validation-for="RePassword"></span>
                </div>

                <div class="container-login100-form-btn m-t-32">
                    <button class="login100-form-btn">
                        ایجاد
                    </button>

                </div>
                <p class="text-center">  حساب کاربری داری <a href="Login" class="text-danger">ورود</a></p>
            </form>
        </div>
    </div>
</div>



<div id="dropDownSelect1"></div>

